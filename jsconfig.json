{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core": ["./dist/core.min.js", "./src/core-api.js"],
      "d3": ["./node_modules/@types/d3"]
    }
  },
  "include": [
    "src/model/**/*",
    "src/types/**/*",
    "src/ui/visualization/**/*",
  ],
  "exclude": [
    "extensions/**/*",
    "node_modules", 
    "dist"
  ]
}